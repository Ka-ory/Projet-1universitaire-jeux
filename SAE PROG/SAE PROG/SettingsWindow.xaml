<Window x:Class="SAE_PROG.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_PROG"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="900" Width="1600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/old-black-background-grunge-texture-dark-wallpaper-blackboard-chalkboard-concrete.jpg"/>
        </Grid.Background>
        <Label Content="" HorizontalAlignment="Left" Margin="495,187,0,0" VerticalAlignment="Top" Height="109" Width="240" Foreground="White">
            <Label.Background>
                <ImageBrush ImageSource="/button (7).png"/>
            </Label.Background>
        </Label>
        <Slider x:Name="slideSon" HorizontalAlignment="Left" Margin="800,230,0,0" VerticalAlignment="Top" Width="354" Height="33"/>
        <Label Content="" HorizontalAlignment="Left" Margin="495,346,0,0" VerticalAlignment="Top" Foreground="#FFFFFEFE" Width="240" Height="114">
            <Label.Background>
                <ImageBrush ImageSource="/button (6).png"/>
            </Label.Background>
        </Label>
        <Slider x:Name="slideMusic" HorizontalAlignment="Left" Margin="800,391,0,0" VerticalAlignment="Top" Width="354" Height="24"/>
        <Button Style="{DynamicResource SettingsButtons}" Content="" Margin="556,692,556,76" Click="Button_Click" BorderBrush="#00707070" RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="/button (5).png"/>
            </Button.Background>
            <Button.RenderTransform>
                <ScaleTransform />
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.2" Duration="0:0:0.5" />
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.2" Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
    </Grid>
</Window>
