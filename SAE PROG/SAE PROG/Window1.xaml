<Window x:Class="SAE_PROG.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_PROG"
        mc:Ignorable="d"
        Title="Window1" Height="900" Width="1600">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/t94tjsskssz11 - Copie.jpg"/>
        </Canvas.Background>
        <Button Style="{DynamicResource ButtonStyle1}" Content="" Canvas.Left="522" Canvas.Top="334" Height="144" Width="556" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#00000000" BorderBrush="#00707070" Click="Button_Click"  RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="/bouton.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <ScaleTransform />
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.2" Duration="0:0:0.5" />
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.2" Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button Style="{DynamicResource ButtonStyle2}" Content="" Canvas.Left="522" Canvas.Top="511" Height="145" Width="556" BorderBrush="#00707070" Click="Button_Click_1"  RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button.Background>
                <ImageBrush ImageSource="/bouton - Copie.png"/>
            </Button.Background>
            <Button.RenderTransform>
                <ScaleTransform />
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.2" Duration="0:0:0.5" />
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.2" Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button Style="{DynamicResource ButtonStyle3}" Content="" Canvas.Left="522" Canvas.Top="676" Height="149" Width="556" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="#00707070" Click="Button_Click_2"  RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="/bouton - Copie (2).png"/>
            </Button.Background>
            <Button.RenderTransform>
                <ScaleTransform />
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.2" Duration="0:0:0.5" />
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.2" Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Image Height="231" Canvas.Left="107" Source="/t94tjsskssz11.jpg" Stretch="Fill" Width="1395" Canvas.Top="26" HorizontalAlignment="Left" VerticalAlignment="Top"/>


    </Canvas>
